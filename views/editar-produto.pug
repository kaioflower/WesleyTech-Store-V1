extends layout

block content
  .container
    h1 Editar Produto
    form(action=`/produto/${produto.id}/editar`, method="POST")
      .form-group
        label Nome
        input.form-control(type="text", name="nome", value=produto.nome)
      .form-group
        label Descrição
        textarea.form-control(name="descricao")= produto.descricao
      .form-group
        label Preço
        input.form-control(type="number", step="0.01", name="preco", value=produto.preco)
      .form-group
        label Categoria
        input.form-control(type="text", name="categoria", value=produto.categoria)
      .form-group
        label Disponibilidade
        input.form-control(type="text", name="disponibilidade", value=produto.disponibilidade)
      button.btn.btn-success(type="submit") Salvar Alterações
