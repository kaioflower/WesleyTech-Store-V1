extends layout

block content
  .container
    h1 Criar Novo Administrador
    form(method="POST" action="/admin/create")
      .form-group
        label(for="email") E-mail
        input#email.form-control(type="email" name="email" required)
      .form-group
        label(for="password") Senha
        input#password.form-control(type="password" name="password" required)
      button.btn.btn-primary(type="submit") Criar Administrador
